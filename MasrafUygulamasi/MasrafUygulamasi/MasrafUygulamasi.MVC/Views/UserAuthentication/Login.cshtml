@using MasrafUygulamasi.MVC.ViewModels;
@{
	Layout = "~/Views/Shared/_AuthSignInLayout.cshtml";
}
@model LoginVM

<div class="card overflow-hidden border-0 shadow-lg my-5">
	<div class="card-body p-0">
		<div class="row">
			<div class="col-lg-5 d-none d-lg-block m-auto">
				<img class="img-fluid" src="~/Images/507053_teamworkpuzzleillustration_shutterstock_1518160778_513256.jpg"/>
			</div>
			<div class="col-lg-7 m-auto">
				<div class="p-5">
					<h1 class="text-primary"><strong>Login</strong></h1>
					<form asp-action="Login" method="post" class="mt-4">
						<div>
							<label asp-for="UserName">UserName</label>
							<input type="text" asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div>
							<label asp-for="Password">Password</label>
							<div class="input-group">
								<input type="password" asp-for="Password" class="form-control" id="passwordInput" />
								<div class="input-group-append">
									<div class="input-group-text">
										<input type="checkbox" id="showPasswordCheckbox" onchange="togglePasswordVisibility()" />
										<label for="showPasswordCheckbox">Show Password</label>
									</div>
								</div>
							</div>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						@{
							if (TempData["msg"] != null)
							{
								<div class="alert alert-danger">
									@TempData["msg"]
								</div>
							}
							<button type="submit" class="btn btn-primary">Login</button>
						}
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		function togglePasswordVisibility() {
			let passwordInput = document.getElementById("passwordInput");
			let showPasswordCheckbox = document.getElementById("showPasswordCheckbox");
			if (showPasswordCheckbox.checked) {
				passwordInput.type = "text";
			}
			else {
				passwordInput.type = "password";
			}
		}
	</script>
}

